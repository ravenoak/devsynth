{
  "name": "DevSynth",
  "dockerFile": "Dockerfile",
  "remoteUser": "dev",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "github.copilot"
      ]
    },
    "jetbrains": {
      "plugins": [
        "PythonCore",
        "Docker",
        "com.github.copilot"
      ]
    }
  },
  "postCreateCommand": "poetry run pytest -q",
  "forwardPorts": [8000],
  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=/workspace/.git,type=bind,consistency=delegated"
  ]
}
