# DevSynth local testing environment example
# Copy this file to `.env` (kept out of VCS) and adjust values as needed.
# See docs/developer_guides/testing.md and docs/user_guides/cli_command_reference.md for details.

# Provider selection (tests default to stub/offline via CLI unless overridden)
DEVSYNTH_OFFLINE=true
DEVSYNTH_PROVIDER=stub

# OpenAI (live tests are opt-in; keep offline by default)
# Set only when running live OpenAI subsets locally
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small
OPENAI_HTTP_TIMEOUT=15

# LM Studio (local server)
LM_STUDIO_ENDPOINT=http://127.0.0.1:1234
LM_STUDIO_HTTP_TIMEOUT=15
DEVSYNTH_RESOURCE_LMSTUDIO_AVAILABLE=false

# Resource-gated backends (toggle to true to enable related tests locally)
DEVSYNTH_RESOURCE_CLI_AVAILABLE=true
DEVSYNTH_RESOURCE_CODEBASE_AVAILABLE=true
DEVSYNTH_RESOURCE_CHROMADB_AVAILABLE=false
DEVSYNTH_RESOURCE_FAISS_AVAILABLE=false
DEVSYNTH_RESOURCE_KUZU_AVAILABLE=false
DEVSYNTH_RESOURCE_TINYDB_AVAILABLE=false
DEVSYNTH_RESOURCE_LMDB_AVAILABLE=false
DEVSYNTH_RESOURCE_DUCKDB_AVAILABLE=false
DEVSYNTH_RESOURCE_RDFLIB_AVAILABLE=false

# Test coverage gating (maintainer profile)
# Enable strict gating locally when preparing release readiness
DEVSYNTH_STRICT_COVERAGE=0
DEVSYNTH_COV_FAIL_UNDER=90

# Test runner behavior
PYTEST_TIMEOUT=60
DEVSYNTH_TEST_TIMEOUT_SECONDS=30
