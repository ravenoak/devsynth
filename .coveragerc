[run]
source = src/devsynth
omit =
    */tests/*
    */templates/*
    */examples/*
    */scripts/*
    */__pycache__/*
    */migrations/*
    */venv/*
    */env/*
    */.tox/*
    */build/*
    */dist/*

[report]
# Quality-focused coverage configuration - enhanced for Task 2.3
fail_under = 80
show_missing = true
skip_covered = true
precision = 2
sort = Cover

# Enhanced reporting for better actionable insights
skip_empty = true
partial_branches = true

# Focus on meaningful coverage by excluding boilerplate - enhanced for Task 2.3
exclude_lines =
    pragma: no cover
    pragma: nocover
    def __repr__
    def __str__
    raise NotImplementedError
    raise AssertionError
    raise ValueError.*not implemented
    if __name__ == .__main__.
    if TYPE_CHECKING:
    @abstract.*
    @abc.abstractmethod
    @abc.abstractproperty
    @overload
    pass
    raise ImportError
    except ImportError
    except ModuleNotFoundError
    except KeyboardInterrupt
    if 0:
    if False:
    # Additional exclusions for better signal-to-noise ratio
    logger\.debug
    logger\.trace
    # Exclude defensive programming patterns
    assert False.*unreachable
    # Exclude type narrowing guards
    assert isinstance

[html]
directory = htmlcov
title = DevSynth Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
